
<%= simple_form_for(@discussion) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>



  <div class="form-inputs">
    <%= f.input :title, class:"control" %>
    <%= f.input :content, class:"control" %>
    <span class="select">
      <%= f.input_field :channel_id, collection: @channels.map { |c| [c.channel, c.id] }, prompt: "
        Select channel", class:"control has-icons-left" %>
    </span>
    <span class="icon is-small is-left">
      <i class="fa fa-tag"</i>
    </span>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"button is-info" %>
  </div>
<% end %>
